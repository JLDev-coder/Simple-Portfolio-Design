---
interface Props {
  title: string;
  date: string;
  tag: string;
  description: string;
}

const { title, date, tag, description } = Astro.props;
---

<a href="/blog">
  <div class="container">
    <div class="post">
      <h1>{title}</h1>
      <div class="date-tag">
        <p class="date">{date}</p>
        <div class="step"></div>
        <p class="tag">{tag}</p>
      </div>
      <p class="description">
        {description}
      </p>
    </div>
  </div>
</a>

<style>
  .container {
    background-color: #fff;
    width: 418px;
    height: 295px;
    border-radius: 4px;
    color: #21243d;
    padding: 16px;
    box-sizing: border-box;
  }

  .post {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  h1 {
    font-size: 26px;
    font-family: "Heebo-Bold";
    margin-bottom: 16px;
  }

  .date-tag {
    font-family: "Heebo-Regular";
    font-size: 18px;
    display: flex;
    align-items: center;
    margin-bottom: 16px;
  }

  .step {
    width: 1px;
    height: 21px;
    background-color: #21243d;
  }

  .date {
    margin-right: 16px;
  }

  .tag {
    margin-left: 16px;
  }

  .description {
    font-family: "Heebo-Regular";
    font-size: 16px;
    margin-bottom: 16px;
  }

  a {
    text-decoration: none;
  }
</style>
